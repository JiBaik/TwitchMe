<% include ./partials/header %>
<div class="container" style = "padding-top: 100px">
    <div class="row">
        <h1 style="text-align: center">Add a streamer</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/additem" method="POST" class="form-inline">
                <div class="form-group">
                    <input class="form-control" type="text" name="listitem[streamName]" placeholder="Stream Name" required> 
                    <input class="form-control" type="number" value="0" min="1" max = "10" name = "listitem[rank]"> 
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-primary btn-block">Add!</button>
                </div>
            </form>
            <a href="/watch" style="color: white">Go Back</a>
        </div>
         <div class="col-xs-offset-2 col-xs-10" id="howtolinks">
             <span class="left" style="color: white; font-size:2em"> <i class="fa fa-angle-left"></i><i class="fa fa-angle-left"></i></span>
                <a><img style="width: 80%"></a>
              <span class="right" style="color: white; font-size:2em"><i class="fa fa-angle-right"></i><i class="fa fa-angle-right"></i></span>
        </div>
    </div>
</div>

<script src="scripts/new.js"></script>
